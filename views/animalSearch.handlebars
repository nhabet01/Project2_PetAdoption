<div class="container">

    <div class="row main">
        <div class="main-login main-center text-center">

            <h5>Animal Search for {{data.username}}</h5>
            <form class="" method="POST" action="/search/{{data.username}}">

                <div class="form-group">
            
                    <div class="cols-sm-10">
                        <label for="sel1">Select animal:</label>
                        <select class="form-control" name="animalType" id="sel1">
                            {{#if data.animal}}
                            <option>{{data.animal}}</option>
                            {{/if}}
                            <option>Cat</option>
                            <option>Dog</option>
                            <option>Horse</option>
                            <option>Reptile</option>
                            <option>Bird</option>
                            <option>Smallfurry </option>
                            <option>Barnyard</option>
                            <option>Pig</option>
                      </select>
                    </div>
                </div>

                <div class="form-group">
                  
                    <div class="cols-sm-10">
                        <label for="sel1">Age:</label>
                        <select class="form-control" name="animalAge" id="sel1">
                            {{#if data.age}}
                            <option>{{data.age}}</option>
                            {{/if}}
                            <option>Adult</option>
                            <option>Baby</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                   
                    <div class="cols-sm-10">
                        <label for="sel1">Gender:</label>
                        <select class="form-control" name="animalSex" id="sel1">
                            {{#if data.gender}}
                            <option>{{data.gender}}</option>
                            {{/if}}
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="zip" class="cols-sm-2 control-label">Zip</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-home fa-lg" aria-hidden="true"></i></span>
                        
                            <input type="text" value="{{data.zip}}" class="form-control" name="zip" id="zip" placeholder="Enter your Zipcode" />
                        </div>
                    </div>
                </div>
                <div class="form-group ">
                <button type="submit" id="button" class=" btn btn-primary btn-lg btn-block login-button ">Search For Animals</button>

                </div>

            </form>
        </div>
    </div>
</div>

